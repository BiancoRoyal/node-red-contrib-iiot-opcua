{
  "name": "node-red-contrib-iiot-opcua",
  "version": "0.1.2",
  "description": "The next evolution IoT/IIoT OPC UA toolbox package for Node-RED based on node-opcua.",
  "repository": {
    "type": "git",
    "url": "git@gitlab.sigmalto.com:contitech/node-red-distro.git"
  },
  "dependencies": {
    "cron": "2.0.0",
    "debug": "4.3.4",
    "easy-table": "1.2.0",
    "node-opcua": "2.64.1",
    "source-map-support": "0.5.21",
    "stately.js": "1.3.0",
    "treeify": "1.1.0",
    "underscore": "1.13.3",
    "vm2": "3.9.9"
  },
  "keywords": [
    "node-red",
    "node-opcua",
    "automation",
    "fieldbus",
    "iiot",
    "opc ua",
    "modbus"
  ],
  "author": "Bianco Royal <developers@bianco-royal.de>",
  "license": "BSD-3-Clause",
  "bugs": {
    "url": "https://github.com/BiancoRoyal/node-red-contrib-iiot-opcua/issues"
  },
  "homepage": "https://github.com/BiancoRoyal/node-red-contrib-iiot-opcua#readme",
  "node-red": {
    "nodes": {
      "OPCUA-IIoT-Connector": "opcuaIIoT/opcua-iiot-connector.js",
      "OPCUA-IIoT-Flex-Connector": "opcuaIIoT/opcua-iiot-flex-connector.js",
      "OPCUA-IIoT-Inject": "opcuaIIoT/opcua-iiot-inject.js",
      "OPCUA-IIoT-Node": "opcuaIIoT/opcua-iiot-node.js",
      "OPCUA-IIoT-Event": "opcuaIIoT/opcua-iiot-event.js",
      "OPCUA-IIoT-Listener": "opcuaIIoT/opcua-iiot-listener.js",
      "OPCUA-IIoT-Read": "opcuaIIoT/opcua-iiot-read.js",
      "OPCUA-IIoT-Write": "opcuaIIoT/opcua-iiot-write.js",
      "OPCUA-IIoT-Response": "opcuaIIoT/opcua-iiot-response.js",
      "OPCUA-IIoT-Browser": "opcuaIIoT/opcua-iiot-browser.js",
      "OPCUA-IIoT-Crawler": "opcuaIIoT/opcua-iiot-crawler.js",
      "OPCUA-IIoT-Server": "opcuaIIoT/opcua-iiot-server.js",
      "OPCUA-IIoT-Flex-Server": "opcuaIIoT/opcua-iiot-flex-server.js",
      "OPCUA-IIoT-Server-ASO": "opcuaIIoT/opcua-iiot-server-aso.js",
      "OPCUA-IIoT-Server-Command": "opcuaIIoT/opcua-iiot-server-cmd.js",
      "OPCUA-IIoT-Result-Filter": "opcuaIIoT/opcua-iiot-result-filter.js",
      "OPCUA-IIoT-Method-Caller": "opcuaIIoT/opcua-iiot-method-caller.js",
      "OPCUA-IIoT-Discovery": "opcuaIIoT/opcua-iiot-discovery.js"
    }
  },
  "engines": {
    "node": ">=14"
  },
  "scripts": {
    "postinstall": "node ./create_certificates.js demo --dev -s -r ./certificates",
    "test:clearCache": "jest --clearCache",
    "test1": "standard --fix && gulp clean && jest --detectOpenHandles --forceExit --bail --logHeapUsage --debug",
    "test": "gulp clean && jest --detectOpenHandles --forceExit --bail --logHeapUsage --debug",
    "coverage1": "standard --fix && gulp clean && rm -rf ./jcoverage && jest --coverage --detectOpenHandles --forceExit --bail --logHeapUsage --debug",
    "coverage": "gulp clean && rm -rf ./jcoverage && jest --coverage --detectOpenHandles --forceExit --logHeapUsage --debug",
    "coverage:ci1": "standard --fix && jest --coverage --verbose --detectOpenHandles --forceExit --logHeapUsage --ci --debug",
    "coverage:ci": "jest --coverage --verbose --detectOpenHandles --forceExit --logHeapUsage --ci --debug",
    "coverage:upload": "cat ./jcoverage/lcov.info | codacy-coverage --token eded179f99764906b775603a52e8a5b4",
    "test:ci1": "standard --fix && jest --verbose --detectOpenHandles --forceExit --logHeapUsage --ci --debug",
    "test:ci": "jest --verbose --detectOpenHandles --forceExit --logHeapUsage --ci --debug",
    "build1": "standard --fix && gulp publish",
    "build": "gulp publish",
    "prepublishOnly": "npm test && npm run coverage && npm run build",
    "release": "standard-version -a",
    "inspect": "jsinspect ./src > .jsinspect-results.json",
    "rewrite-changelog": "conventional-changelog -p angular -i CHANGELOG.md -s -r 0"
  },
  "files": [
    "docs",
    "examples",
    "opcuaIIoT",
    "create_certificates.js"
  ],
  "devDependencies": {
    "@actions/core": "^1.8.2",
    "@types/cron": "^2.0.0",
    "@types/debug": "^4.1.7",
    "@types/jest": "^27.4.1",
    "@types/node-red": "^1.2.0",
    "chai": "^4.3.6",
    "gulp": "^4.0.2",
    "gulp-babel": "^8.0.0",
    "gulp-clean": "^0.4.0",
    "gulp-htmlmin": "^5.0.1",
    "gulp-jsdoc3": "^3.0.0",
    "gulp-obfuscate": "^0.2.9",
    "gulp-replace": "^1.1.3",
    "gulp-sequence": "^1.0.0",
    "gulp-sourcemaps": "^3.0.0",
    "gulp-typescript": "^6.0.0-alpha.1",
    "gulp-uglify": "^3.0.2",
    "jest": "^27.5.1",
    "jsdoc": "^3.6.10",
    "nock": "^13.2.4",
    "node-red": "^2.2.2",
    "node-red-node-test-helper": "^0.2.7",
    "read-pkg-up": "^7.0.1",
    "readdirp": "^2.2.1",
    "sinon": "^13.0.1",
    "ts-jest": "^27.1.4",
    "typescript": "^4.6.3",
    "uglify-js": "^3.15.2",
    "when": "^3.7.8"
  },
  "directories": {
    "doc": "docs",
    "example": "examples",
    "test": "test"
  },
  "standard": {
    "env": [
      "jest"
    ],
    "ignore": [
      "code/",
      "node_modules/",
      "examples/",
      "opcuaIIoT/",
      "docs",
      "src/public/",
      "test"
    ]
  },
  "main": "index.js",
  "browserslist": [
    "> 0.25%",
    "not dead"
  ]
}
